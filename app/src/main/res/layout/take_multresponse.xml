<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text = ""
        android:id="@+id/mc_question"
        android:layout_marginBottom="12dp"
        android:textSize="22dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mc_question"
        android:text="  A:"
        android:id="@+id/btn_choice1"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_choice1"
        android:textSize = "18dp"
        android:layout_marginBottom="12dp"
        android:text = ""
        android:id="@id/answer1"
        android:layout_below="@id/mc_question"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_choice1"
        android:text="  B:"
        android:id="@+id/btn_choice2"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_choice2"
        android:textSize = "18dp"
        android:layout_marginBottom="10dp"
        android:text = ""
        android:layout_below="@id/btn_choice1"
        android:id="@+id/answer2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_choice2"
        android:text="  C:"
        android:id="@+id/btn_choice3"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_choice3"
        android:textSize = "18dp"
        android:layout_marginBottom="10dp"
        android:text = ""
        android:layout_below="@id/btn_choice2"
        android:id="@+id/answer3"/>



</RelativeLayout>