<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Multiple Choice"
        android:id="@+id/multChoice"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multChoice"
        android:text="  A:"
        android:id="@+id/choice1"
        android:textSize="22dp"
        android:layout_marginBottom="12dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/choice1"
        android:id="@+id/answer1"
        android:layout_below="@id/multChoice"
        android:ems="10"
        android:text=""
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/answer1"
        android:id="@+id/spn_pts1"
        android:layout_below="@id/multChoice"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choice1"
        android:text="  B:"
        android:id="@+id/choice2"
        android:textSize="22dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/choice2"
        android:id="@+id/answer2"
        android:layout_below="@id/choice1"
        android:ems="10"
        android:text=""
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/answer2"
        android:id="@+id/spn_pts2"
        android:layout_below="@id/choice1"/>



</RelativeLayout>